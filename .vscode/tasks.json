{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/RobonomikCommunicator.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary;ForceNoAlign"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/RobonomikCommunicator.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary;ForceNoAlign"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/RobonomikCommunicator.sln"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "maui-build",
            "type": "maui",
            "configuration": "Debug",
            "targetFramework": "net8.0-windows10.0.19041.0",
            "project": "${workspaceFolder}\\Standalone\\Standalone.csproj",
            "problemMatcher": "$msCompile"
        }
    ]
}