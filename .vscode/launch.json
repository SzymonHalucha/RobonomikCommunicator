{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Blazor Web Debug",
            "type": "blazorwasm",
            "request": "launch",
            "cwd": "${workspaceFolder}\\Server",
            "browser": "chrome"
        },
        {
            "name": "MAUI Desktop Debug",
            "type": "maui",
            "request": "launch",
            "configuration": "Debug",
            "targetFramework": "net8.0-windows10.0.19041.0",
            "project": "${workspaceFolder}\\Hybrid\\Hybrid.csproj",
            "preLaunchTask": "maui: Build"
        },
        {
            "name": "MAUI Android Debug",
            "type": "maui",
            "request": "launch",
            "configuration": "Debug",
            "targetFramework": "net8.0-android",
            "project": "${workspaceFolder}\\Hybrid\\Hybrid.csproj",
            "preLaunchTask": "maui: Build"
        }
    ]
}