<MyTwoLineAvatarIconListItem>
    text: "COM1"
    secondary_text: "Description"
    IconLeftWidgetWithoutTouch:
        icon: "usb-port"


<MyListItemWithCheckbox>
    checkbox_name: "Example 1"
    padding: dp(15)
    adaptive_height: True
    _no_ripple_effect: True
    divider: None
    MyRightCheckboxContainer:
        id: checkbox_container


<MyVariableCard>
    padding: dp(10)
    size_hint: 1, None
    height: dp(120)
    MDBoxLayout:
        orientation: "vertical"
        MDBoxLayout:
            spacing: dp(15)
            orientation: "horizontal"
            MDRaisedButton:
                text: "Edit"
                pos_hint: {"center_x": .5, "center_y": .5}
                on_release: root.view.on_variable_edit(root)
            MDRectangleFlatButton:
                text: "Delete"
                pos_hint: {"center_x": .5, "center_y": .5}
                on_release: root.view.on_variable_delete(root)
            MDLabel:
                id: variable_name
                pos_hint: {"center_x": .5, "center_y": .5}
                text: "Name: Example 1"
                bold: True
        MDBoxLayout:
            orientation: "horizontal"
            MDLabel:
                id: variable_type
                pos_hint: {"center_x": .5, "center_y": .5}
                text: "Type: Int"
            MDLabel:
                id: variable_direction 
                pos_hint: {"center_x": .5, "center_y": .5}
                text: "Direction: Output"
            MDLabel:
                id: variable_interval
                pos_hint: {"center_x": .5, "center_y": .5}
                text: "Refresh: 100ms"


<MyBaseControllerCardTemplate@MDRelativeLayout>
    MDAnchorLayout:
        id: controller_top
        padding: dp(5), 0, 0, 0
        anchor_x: "left"
        anchor_y: "top"
        size_hint: 1, None
        height: dp(40)
        pos_hint: {"center_x": .5, "top": 1}
        MDLabel:
            id: controller_name
            size_hint: None, None
            size: self.parent.size
            text: "Base Controller"
            valign: "center"


<MyButtonControllerCard>
    size_hint: None, None
    MyBaseControllerCardTemplate:
        MDAnchorLayout:
            anchor_x: "center"
            anchor_y: "center"
            size_hint: 1, 1
            MDRaisedButton:
                text: "Button"
                pos_hint: {"center_x": .5, "center_y": .5}


